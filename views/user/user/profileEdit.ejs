                                                            <span class="input-group-text"><i
                                                                    class="fa fa-phone"></i></span>
                                                            <input type="number" class="form-control" id="phone"
                                                                value="<%=userdata.mobile%>" placeholder="Phone Number"
                                                                disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="text-center mt-5">
                                                    <button type="button" id="update" class="btn btn-primary px-4">Save
                                                        Changes</button>
                                                </div>
                                            </form>
