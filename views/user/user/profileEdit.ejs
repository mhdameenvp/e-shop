    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const selectgender = document.getElementById('selectgender').value
            if (selectgender == "female") {
                document.getElementById('female').checked = true;
            } else if (selectgender == "male") {
                document.getElementById('male').checked = true;
            }
            const update = document.getElementById('update')
            const errorname = document.getElementById("errorname")

            document.getElementById('fullname').addEventListener('blur', function () {
                const username = document.getElementById('fullname').value
                console.log(username);
                console.log(username);
                if (!username || username.trim() == '') {
                    errorname.innerHTML = 'User name required'
                    errorname.style.color = "red"

                } else {
                    errorname.innerHTML = ''
                }
            })

            document.getElementById('phone').addEventListener('blur', function () {
                const mobilenumber = this.value

                const errorphone = document.getElementById('errorphone')
                if (mobilenumber.length !== 10) {
                    errorphone.innerHTML = 'Please Enter a valid Number'
                    errorphone.style.color = 'red'
