                    errorphone.innerHTML = ""
                }
            })
            update.addEventListener('click', function (e) {
                e.preventDefault()

                const fullname = document.getElementById('fullname').value
                const email = document.getElementById('email').value
                const age = document.getElementById("age").value
                const gender = document.querySelector('input[name="gender"]:checked').value
                console.log(gender);
                const phone = document.getElementById('phone').value
                const oldEmail = document.getElementById('oldEmail').value
                console.log("oldEmail", oldEmail);
                if (oldEmail !== email) {

                }
                axios.patch('/updateprofile', { fullname, email, phone, gender, age })
                    .then(res => {
                        if (res.data.email) {
                            window.location.href = '/emailOtp'
                        }
                        if (res.data.success) {
                            document.getElementById('errorProfile').innerHTML=res.data.message
                            window.location.href = '/profile'
                        } else {
                            document.getElementById('errorProfile').innerHTML=res.data.message
                        }

                    }).catch(err => {
                        console.log('error in updateprofile');
                    })



            })




        })

    </script>

