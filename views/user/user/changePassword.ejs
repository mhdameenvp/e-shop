    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const update = document.getElementById('update')

            const newPassword = document.getElementById('newPassword')
            const currentPass = document.getElementById('currentPassword')
            const confirmPassword = document.getElementById('confirmPassword')

            newPassword.disabled=true
            confirmPassword.disabled=true
            currentPass.addEventListener('blur', function () {
                const currentPassval = document.getElementById('currentPassword').value
                const errormsg = document.getElementById('errmsg')
                axios.post('/check-password', { currentPassval })
                    .then(res => {
                        if (res.data.success) {
                            errormsg.innerHTML = res.data.message
                            newPassword.disabled=false
                            update.disabled = false
                            
                        } else {
                            errormsg.innerHTML = res.data.message;
                            errormsg.style.color = "red";
                            confirmPassword.disabled=true
                            update.disabled = true
                            newPassword.disabled=true
                            console.log('success');
                        }
                    }).catch(res => {
                        console.log('error');
                    })

            })

            // Validate new password
            newPassword.addEventListener('blur', function () {
                const newVal = newPassword.value;
                const currentVal = currentPassword.value;
                const confirmPassword = document.getElementById('confirmPassword')

                err.innerHTML = "";
                err.style.color = "red";
                update.disabled = false
                confirmPassword.disabled=false
                if (newVal === currentVal) {
                    err.innerHTML = "New password cannot be the same as the current password.";
                    update.disabled = true
                    confirmPassword.disabled=true
                    return
                }


                if (newVal.length < 8) {
                    err.innerHTML = "Password must be at least 8 characters long.";
                    update.disabled = true
                    confirmPassword.disabled=true
                    return;
                }
                if (!newVal || newVal.trim() == "") {
                    err.innerHTML = "Enter Password";
                    update.disabled = true
                    confirmPassword.disabled=true

                    return;
                }


                err.innerHTML = "";
                err.style.color = "initial";
                update.disabled = false
                confirmPassword.disabled=false
            });


        })










        function confirm() {
            const newPassword = document.getElementById('newPassword').value
            const confirmPassword = document.getElementById('confirmPassword').value
            const message = document.getElementById('message')
            if (newPassword !== confirmPassword) {
                message.textContent = "Passwords do not match."
                message.style.color = "red";
            } else {
                message.textContent = "Passwords match."
                message.style.color = "green";
            }

        }

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const update = document.getElementById('update')

            update.addEventListener('click', function (e) {
                e.preventDefault()
                const newPassword = document.getElementById('newPassword').value
                const confirmPassword = document.getElementById('confirmPassword').value

                axios.post('/passwordChange', { newPassword, confirmPassword })
                    .then(res => {
                        if (res.data.success) {
                            Swal.fire({
                                title: "success!",
                                text: "Password changed!",
                                icon: "success",
                                confirmButtonText: 'OK'
                            }).then((result => {
                                if (result.isConfirmed) {
                                    setTimeout(() => {
                                        window.location.href = '/login';

                                    }, 1000)
                                }
                            }))


                        } else {
                            Swal.fire({
                                title: 'error!',
                                text: 'somthing wrong!',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });


                        }

                    }).catch(err => {
                        console.log('error');
                    })
            })


        })


    </script>

