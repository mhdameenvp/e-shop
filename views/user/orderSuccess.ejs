<%- include('./../layouts/userLayout/header',{pageTitle: 'ordersuccess page'})%>

	<style>
		body{
			background-color:rgb(241, 243, 246);
		}
        .order-success {
            padding: 20px;
            max-width: 800px;
            margin: auto;
        }
        .order-details {
			
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
        }
    </style>
<div class="container order-success mt-5">
     <div class="row ">
    <h2 class="text-center text-success ">Thank You for Your Order!</h2>
    <p class="text-center">Your order has been placed and is being processed. You will receive an email confirmation shortly.</p>

    <div class="order-details border shadow " >
        <h4 class="mb-3 " style="color: #7280e0;">Order Summary</h4>
        <p class="mb-2"><strong >Order Number:</strong> #MN0124</p>
        <p class="mb-2"><strong>Total:</strong> â‚¹<%=orderDetail.orderAmount%></p>
        <p class="mb-2"><strong>Order Date:</strong> <%=formattedCreatedAt%></p>
        <p class="mb-2"><strong>Payment Method:</strong><%=orderDetail.paymentMethod%> </p>
        
        <!-- Add more details as needed -->

        <h5 class="mb-3 mt-3 " style="color: #7280e0;"><strong>Shipping Address</strong></h5>
	
        <p><%=orderDetail.deliveryAddress.name%></p>
        <p><%=orderDetail.deliveryAddress.mobile%></p>
  
		<p><%=orderDetail.deliveryAddress.streetAddress%></p>
		<p><%=orderDetail.deliveryAddress.city%>,<%=orderDetail.deliveryAddress.locality%><%=orderDetail.deliveryAddress.state%> ,<%=orderDetail.deliveryAddress.pincode%></p>
        
        
        <!-- Add more details as needed -->
    </div>

    <div class="text-center d-flex justify-content-center  mt-4">
        <div class="d-flex gap-2 pt-3 " style="width: 300px;">
            <a href="/home" class="btn btn-primary">Continue Shopping</a>
            <a class="btn btn-dark " style="width: 100px;"
                href="/orderpage">
                <button class="text-white "  type="button">Track order </button>
            </a>
        </div>
        
    </div>
</div>
</div>
<%- include('./../layouts/userLayout/footer') %>

